<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%t] %m [%l]%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="logs/rolling.log"
                     filePattern="logs/$${date:yyyy-MM}/%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%t] %m [%l]%n</Pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="1024 KB"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="common.log" level="debug">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>